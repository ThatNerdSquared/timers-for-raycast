{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "timers",
  "title": "Timers",
  "description": "Start/stop countdown timers and stopwatches, directly in Raycast, with no external dependencies.",
  "icon": "command-icon.png",
  "author": "ThatNerd",
  "license": "MIT",
  "commands": [
    {
      "name": "start-5-minute-timer",
      "title": "Start 5 Minute Timer",
      "description": "Set a countdown for 5 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-10-minute-timer",
      "title": "Start 10 Minute Timer",
      "description": "Set a countdown for 10 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-15-minute-timer",
      "title": "Start 15 Minute Timer",
      "description": "Set a countdown for 15 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-25-minute-timer",
      "title": "Start 25 Minute Timer",
      "description": "Set a countdown for 25 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-30-minute-timer",
      "title": "Start 30 Minute Timer",
      "description": "Set a countdown for 30 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-45-minute-timer",
      "title": "Start 45 Minute Timer",
      "description": "Set a countdown for 45 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-60-minute-timer",
      "title": "Start 60 Minute Timer",
      "description": "Set a countdown for 60 minutes.",
      "mode": "view"
    },
    {
      "name": "start-90-minute-timer",
      "title": "Start 90 Minute Timer",
      "description": "Set a countdown for 90 minutes.",
      "mode": "no-view"
    },
    {
      "name": "start-custom-timer",
      "title": "Start Custom Timer",
      "description": "Set a countdown for a custom amount of time.",
      "mode": "view"
    },
    {
      "name": "start-stopwatch",
      "title": "Start Stopwatch",
      "description": "Start a stopwatch that runs infinitely until stopped.",
      "mode": "view"
    },
    {
      "name": "set-alarm",
      "title": "Set Alarm",
      "description": "Set an alarm for a custom date or time.",
      "mode": "view"
    },
    {
      "name": "manage-timers",
      "title": "Manage Timers",
      "description": "View, start, or stop existing countdown timers.",
      "mode": "view"
    },
    {
      "name": "manage-stopwatches",
      "title": "Manage Stopwatches",
      "description": "View, start, or stop existing stopwatches.",
      "mode": "view"
    },
    {
      "name": "manage-alarms",
      "title": "Manage Alarms",
      "description": "View, start, or stop existing alarms.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.27.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
